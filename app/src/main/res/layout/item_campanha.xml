<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:elevation="6dp"
    app:cardCornerRadius="6dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        >

        <TextView android:id="@+id/txtBeneficiario"
            android:text="Nome do BeneficiÃ¡rio:"
            android:textColor="#ff7043"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/txtDescricao"
            android:text="Preciso de sangue"
            android:layout_below="@id/txtBeneficiario"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"/>


        <ImageView android:id="@+id/ivfoto"
            android:layout_toRightOf="@id/txtBeneficiario"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/txtBeneficiario"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@mipmap/ic_launcher"/>
"


        <TextView android:id="@+id/txtQueroDoar"
            android:text="Quero Doar :)"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#ff7043"
            android:background="#ffccbc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtDescricao"/>


    </RelativeLayout>



</android.support.v7.widget.CardView>
